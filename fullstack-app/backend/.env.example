# ============================================================
# StockDSL Backend Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!
# ============================================================

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/stockdsl
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here

# JWT Configuration (generate with: openssl rand -base64 64)
JWT_SECRET=your_very_long_random_secret_key_here_at_least_64_characters
JWT_EXPIRATION=86400000

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000

# Server
PORT=8080

# Logging
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG
SQL_LOG_LEVEL=WARN

# Python path
PYTHON_PATH=python3

# JPA (use 'validate' in production, 'update' in development)
JPA_DDL_AUTO=update
SHOW_SQL=false

# Database pool
DB_POOL_SIZE=5
